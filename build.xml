<?xml version="1.0" encoding="UTF-8"?>
<project name="SRGPlayer" basedir="/opt/srg/srg-player-web/" default="all">
	<property name="builddir" value="${basedir}/build/"/>
	<property name="srcdir" value="${basedir}/src/"/>



	<target name="clean">
		<delete dir="${builddir}"/>
		<delete dir="${builddir}/tests/"/>
	</target>



	<target name="prepare" depends="clean">
		<mkdir dir="${builddir}"/>
		<mkdir dir="${builddir}/tests/"/>
	</target>



	<target name="phpunit" depends="prepare">
		<phpunit haltonfailure="true" haltonerror="true" printsummary="true">
		<formatter todir="${builddir}/build/tests" type="xml"/>
			<batchtest>
				<fileset dir="${srcdir}">
					<include name="*Test.php"/>
				</fileset>
			</batchtest>
		</phpunit>
	</target>


</project>


		
