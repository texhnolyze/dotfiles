! Urxvt
URxvt.buffered: true
URxvt.cursorColor: #5E468C
URxvt.cursorBlink: true
URxvt.geometry: 80x22
URxvt.transparent: 0
URxvt.urgentOnBell: true
URxvt.letterSpace: 0
URxvt.lineSpace: 1
URxvt.internalBorder: 4

! borderless and no scrollbar
URxvt.scrollBar_right: false
URxvt.scrollBar: false
URxvt.borderLess: false

! teh transparency stuff
! URxvt.inheritPixmap: true
! URxvt.tintColor: #6E6E6E
! URxvt.shading: 90

! Font settings
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.dpi: 96
Xft.rgba: rgb

! -- Fonts -- !
URxvt.font:xft:inconsolata for powerline:medium:size=11
!URxvt.font:xft:droid sans for powerline:size=8
!URxvt.font:xft:dejavu sans mono for powerline:size=8
!URxvt.font:xft:droid sans mono slashed:size=8
!URxvt.boldFont:xft:droid sans mono slashed:size=8
!URxvt.font:xft:dejavu sans mono:size=8
!URxvt.boldFont:xft:dejavu sans mono:size=8
!URxvt.font:xft:luxi mono:regular:size=10
!URxvt.boldFont:xft:luxi mono:regular:size=10
!URxvt.font:xft:envy code r:medium:size=8
!URxvt.boldFont:xft:envy code r:medium:size=8
!URxvt.font:xft:inconsolata:medium:size=8
URxvt.boldFont:xft:inconsolata:medium:size=11

!! urxvt pearl extensions settings
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher: luakit
URxvt.url-select.underline: true
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

