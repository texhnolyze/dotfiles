#!/bin/bash

DATE=$(date +%d.%m.%y)
HOST=$(hostname)

backup() {
    rsync -a --delete -e ssh -i /home/$user/.ssh/backup \
        /home/$user/ \
        $user@$server:/home/$user/backup/$HOST/$DATE/ \
        $> /dev/null
}

if [ $# -lt 3 ]; then
    echo "ERROR: missing arguments" 2>&1
    exit 1
else
    user=$1
    server=$2

    backup 2>&1
fi
